---
import Layout from '../../layouts/Layout.astro';
import { fetchProducts, fetchContentByType, type SheetItem } from '../../utils/sheet';
import { APP_CONFIG } from '../../config';
import { getOptimizedImage, generateSlug } from '../../utils/common';

// This function is required for static site generation
// It tells Astro which pages to generate at build time
export async function getStaticPaths() {
  const SHEET_CSV_URL = import.meta.env.PUBLIC_SHEET_CSV_URL || "";
  const CONTENT_CSV_URL = import.meta.env.PUBLIC_CONTENT_CSV_URL || "";
  
  let products: SheetItem[] = [];
  
  try {
    // Try dedicated products sheet first
    if (SHEET_CSV_URL) {
      products = await fetchProducts(SHEET_CSV_URL);
    }
    
    // Fallback to universal content sheet
    if (products.length === 0 && CONTENT_CSV_URL) {
      products = await fetchContentByType(CONTENT_CSV_URL, 'product') as SheetItem[];
    }
  } catch (error) {
    console.error("Error fetching products for static paths:", error);
  }
  
  // Generate a path for each product
  return products.map((product) => {
    const productId = product.id || generateSlug(product.name || "");
    return {
      params: { id: productId },
      props: { product }
    };
  });
}

// Get the product from props (passed by getStaticPaths)
const { product } = Astro.props;

const { whatsappNumber } = APP_CONFIG.contact;
const { cloudinaryCloudName } = APP_CONFIG.images;
const WHATSAPP_NUMBER = whatsappNumber;
const actualCloudName = cloudinaryCloudName;

const optimizedImage = getOptimizedImage(product.imageUrl || "", actualCloudName);
---


<Layout title={product.name} description={product.description?.slice(0, 160)}>
  <section class="py-12 md:py-20 bg-white">
    <div class="container mx-auto px-4">
      
      <!-- Breadcrumb -->
      <nav class="text-sm text-stone-500 mb-8 flex items-center gap-2">
        <a href="/" class="hover:text-amber-600 transition-colors">Home</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        <a href="/#products" class="hover:text-amber-600 transition-colors">Products</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        <span class="text-stone-800 font-medium truncate max-w-[200px]">{product.name}</span>
      </nav>

      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-start">
        <!-- Product Image -->
        <div class="relative group rounded-3xl overflow-hidden bg-stone-100 shadow-2xl border border-stone-200">
          <img 
            src={optimizedImage} 
            alt={product.name} 
            class="w-full h-auto object-cover aspect-square group-hover:scale-105 transition-transform duration-700" 
            transition:name={`image-${product.id}`}
          />
          {product.category && (
            <div class="absolute top-6 left-6 bg-amber-500/90 backdrop-blur-md text-white px-4 py-1.5 rounded-full text-sm font-semibold shadow-lg">
              {product.category}
            </div>
          )}
        </div>

        <!-- Product Details -->
        <div class="space-y-8 lg:pt-8">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-stone-900 mb-4 leading-tight">
              {product.name}
            </h1>
            <div class="flex items-center gap-4">
              {product.price && (
                <span class="text-3xl font-bold text-amber-600">
                 Rs. {product.price}
                </span>
              )}
              {/* Availability Badge could go here */}
              <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
                In Stock
              </span>
            </div>
          </div>

          <div class="prose prose-stone prose-lg">
            <h3 class="text-xl font-semibold text-stone-900 mb-2">Description</h3>
            <p class="text-stone-600 leading-relaxed">
              {product.description || "No description available for this premium product."}
            </p>
          </div>

          <!-- Features/Specs Placeholder (if you had more data fields) -->
          <div class="border-t border-b border-stone-200 py-6">
            <div class="grid grid-cols-2 gap-4">
               <div>
                 <span class="block text-sm text-stone-500 mb-1">Category</span>
                 <span class="font-medium text-stone-800">{product.category || "General"}</span>
               </div>
               <div>
                 <span class="block text-sm text-stone-500 mb-1">Delivery</span>
                 <span class="font-medium text-stone-800">Island-wide</span>
               </div>
            </div>
          </div>

          <!-- CTA Actions -->
          <div class="flex flex-col sm:flex-row gap-4 pt-4">
            <a 
              href={`https://wa.me/${WHATSAPP_NUMBER.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(`Hi, I'm interested in buying: ${product.name} (${product.price || 'Price tbd'})`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-1 inline-flex items-center justify-center gap-2 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white px-8 py-4 rounded-xl font-bold shadow-lg hover:shadow-green-200 transition-all transform hover:-translate-y-1"
            >
