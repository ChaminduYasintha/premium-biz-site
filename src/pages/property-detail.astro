---
import Layout from "../layouts/Layout.astro";

const WHATSAPP_NUMBER =
    import.meta.env.PUBLIC_WHATSAPP_NUMBER || "+94771234567";
---

<Layout title="Property Details">
    <!-- Floating WhatsApp Button -->
    <a
        href={`https://wa.me/${WHATSAPP_NUMBER.replace(/[^0-9]/g, "")}?text=${encodeURIComponent("I'm interested in this property")}`}
        target="_blank"
        rel="noopener noreferrer"
        class="whatsapp-float"
        aria-label="Contact us on WhatsApp"
    >
        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
            ></path>
        </svg>
    </a>

    <!-- Loading State -->
    <div
        id="loading"
        class="min-h-screen flex items-center justify-center bg-slate-50"
    >
        <div class="text-center">
            <div
                class="inline-block w-16 h-16 border-4 border-amber-200 border-t-amber-600 rounded-full animate-spin mb-4"
            >
            </div>
            <p class="text-slate-600">Loading property details...</p>
        </div>
    </div>

    <!-- Property Detail Container -->
    <div id="property-detail" style="display: none;">
        <!-- Content will be loaded here -->
    </div>

    <!-- Not Found State -->
    <div
        id="not-found"
        style="display: none;"
        class="min-h-screen flex items-center justify-center bg-slate-50"
    >
        <div class="text-center p-8">
            <svg
                class="w-24 h-24 mx-auto text-slate-300 mb-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path>
            </svg>
            <h1 class="text-3xl font-bold text-slate-900 mb-4">
                Property Not Found
            </h1>
            <p class="text-slate-600 mb-8">
                The property you're looking for doesn't exist or has been
                removed.
            </p>
            <a href="/properties" class="btn-primary">Browse All Properties</a>
        </div>
    </div>

    <style>
        .whatsapp-float {
            position: fixed;
            bottom: 24px;
            right: 24px;
            width: 64px;
            height: 64px;
            background: #25d366;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 24px rgba(37, 211, 102, 0.5);
            z-index: 9999;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
        }

        .whatsapp-float:hover {
            transform: scale(1.15);
            box-shadow: 0 12px 32px rgba(37, 211, 102, 0.7);
        }

        .whatsapp-float svg {
            color: white;
            fill: white;
        }

        .btn-primary {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
            color: white;
            padding: 1rem 2rem;
            border-radius: 9999px;
            font-weight: 600;
            box-shadow: 0 10px 25px -5px rgba(245, 158, 11, 0.3);
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 35px -5px rgba(245, 158, 11, 0.4);
        }

        .tab-button {
            padding: 0.75rem 1.5rem;
            border: none;
            background: transparent;
            color: #64748b;
            font-weight: 600;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
        }

        .tab-button.active {
            color: #f59e0b;
            border-bottom-color: #f59e0b;
        }

        .tab-button:hover {
            color: #f59e0b;
        }

        @media (max-width: 768px) {
            .whatsapp-float {
                bottom: 20px;
                right: 20px;
                width: 56px;
                height: 56px;
            }
        }
    </style>

    <script define:vars={{ whatsappNumber: WHATSAPP_NUMBER }}>
        async function loadProperty() {
            const loading = document.getElementById("loading");
            const detail = document.getElementById("property-detail");
            const notFound = document.getElementById("not-found");

            // Get property ID from URL query parameter
            const urlParams = new URLSearchParams(window.location.search);
            const propertyId = urlParams.get("id");

            if (!propertyId) {
                loading.style.display = "none";
                notFound.style.display = "block";
                return;
            }

            try {
                if (
                    !window.ENV?.SUPABASE_URL ||
                    !window.ENV?.SUPABASE_ANON_KEY
                ) {
                    throw new Error("Supabase not configured");
                }

                const { createClient } = window.supabase;
                const supabase = createClient(
                    window.ENV.SUPABASE_URL,
                    window.ENV.SUPABASE_ANON_KEY,
                );

                const { data: property, error } = await supabase
                    .from("properties")
                    .select("*")
                    .eq("id", propertyId)
                    .single();

                if (error) throw error;

                if (!property) {
                    loading.style.display = "none";
                    notFound.style.display = "block";
                    return;
                }

                // Format YouTube URL for embed
                const getYouTubeEmbedUrl = (url) => {
                    if (!url) return null;
                    const regExp =
                        /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
                    const match = url.match(regExp);
                    if (match && match[2].length === 11) {
                        return `https://www.youtube.com/embed/${match[2]}`;
                    }
                    return null;
                };

                const youtubeEmbedUrl = getYouTubeEmbedUrl(
                    property.youtube_url,
                );

                // Render property details
                detail.innerHTML = `
          <div class="bg-white">
            <!-- Hero Image -->
            <div class="relative h-[60vh] bg-slate-200">
              <img 
                src="${property.image_url}" 
                alt="${property.title}"
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-8">
                <div class="container mx-auto">
                  <span class="inline-block bg-amber-500 text-white px-4 py-2 rounded-full text-sm font-bold mb-4">
                    ${property.city}
                  </span>
                  <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
                    ${property.title}
                  </h1>
                </div>
              </div>
            </div>

            <!-- Content -->
            <div class="container mx-auto px-4 py-12">
              <div class="grid lg:grid-cols-3 gap-12">
                <!-- Main Content -->
                <div class="lg:col-span-2 space-y-8">
                  <!-- Price -->
                  <div class="flex items-center justify-between flex-wrap gap-4">
                    <div>
                      <p class="text-sm text-slate-500 mb-1">Price</p>
                      <p class="text-4xl font-bold text-amber-600">
                        LKR ${formatPrice(property.price)}
                      </p>
                    </div>
                    <a 
                      href="https://wa.me/${whatsappNumber.replace(/[^0-9]/g, "")}?text=${encodeURIComponent(`I'm interested in ${property.title}`)}"
                      target="_blank"
                      class="btn-primary"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path>
                      </svg>
                      Inquire on WhatsApp
                    </a>
                  </div>

                  <!-- Tabs -->
                  <div class="border-b border-slate-200">
                    <div class="flex gap-4 overflow-x-auto">
                      <button class="tab-button active" onclick="showTab('description')">Description</button>
                      ${youtubeEmbedUrl ? '<button class="tab-button" onclick="showTab(\'video\')">Video Tour</button>' : ""}
                      ${property.view_360_url ? '<button class="tab-button" onclick="showTab(\'360\')">360° View</button>' : ""}
                      ${property.plan_url ? '<button class="tab-button" onclick="showTab(\'plan\')">Floor Plan</button>' : ""}
                    </div>
                  </div>

                  <!-- Tab Content -->
                  <div id="tab-description" class="tab-content">
                    <h2 class="text-2xl font-bold text-slate-900 mb-4">About This Property</h2>
                    <p class="text-slate-600 leading-relaxed whitespace-pre-wrap">
                      ${property.description || "No description available."}
                    </p>
                  </div>

                  ${
                      youtubeEmbedUrl
                          ? `
                  <div id="tab-video" class="tab-content" style="display: none;">
                    <h2 class="text-2xl font-bold text-slate-900 mb-4">Video Tour</h2>
                    <div class="aspect-video bg-slate-100 rounded-2xl overflow-hidden">
                      <iframe 
                        width="100%" 
                        height="100%" 
                        src="${youtubeEmbedUrl}" 
                        frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen
                      ></iframe>
                    </div>
                  </div>
                  `
                          : ""
                  }

                  ${
                      property.view_360_url
                          ? `
                  <div id="tab-360" class="tab-content" style="display: none;">
                    <h2 class="text-2xl font-bold text-slate-900 mb-4">360° Virtual Tour</h2>
                    <div class="aspect-video bg-slate-100 rounded-2xl overflow-hidden">
                      <iframe 
                        width="100%" 
                        height="100%" 
                        src="${property.view_360_url}" 
                        frameborder="0" 
                        allowfullscreen
                      ></iframe>
                    </div>
                  </div>
                  `
                          : ""
                  }

                  ${
                      property.plan_url
                          ? `
                  <div id="tab-plan" class="tab-content" style="display: none;">
                    <h2 class="text-2xl font-bold text-slate-900 mb-4">Floor Plan</h2>
                    <div class="bg-slate-50 rounded-2xl p-8">
                      <img 
                        src="${property.plan_url}" 
                        alt="Floor Plan" 
                        class="w-full h-auto rounded-lg"
                      />
                    </div>
                  </div>
                  `
                          : ""
                  }
                </div>

                <!-- Sidebar -->
                <div class="space-y-6">
                  <!-- Contact Card -->
                  <div class="bg-slate-50 rounded-2xl p-6">
                    <h3 class="text-xl font-bold text-slate-900 mb-4">Interested?</h3>
                    <p class="text-slate-600 mb-6">Contact us to schedule a viewing or get more information.</p>
                    <a 
                      href="https://wa.me/${whatsappNumber.replace(/[^0-9]/g, "")}?text=${encodeURIComponent(`I'd like to know more about ${property.title}`)}"
                      target="_blank"
                      class="w-full inline-flex items-center justify-center gap-2 bg-gradient-to-r from-amber-600 to-orange-600 text-white px-6 py-3 rounded-full font-semibold hover:shadow-lg transition-all"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path>
                      </svg>
                      Message Us
                    </a>
                  </div>

                  ${
                      property.facebook_url
                          ? `
                  <div class="bg-slate-50 rounded-2xl p-6">
                    <h3 class="text-xl font-bold text-slate-900 mb-4">Follow on Social Media</h3>
                    <a 
                      href="${property.facebook_url}" 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-3 text-slate-700 hover:text-blue-600 transition-colors"
                    >
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                      View on Facebook
                    </a>
                  </div>
                  `
                          : ""
                  }

                  <!-- Back to listings -->
                  <div class="text-center">
                    <a href="/properties" class="text-amber-600 hover:text-amber-700 font-medium">
                      ← Back to All Properties
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        `;

                loading.style.display = "none";
                detail.style.display = "block";
            } catch (error) {
                console.error("Error loading property:", error);
                loading.style.display = "none";
                notFound.style.display = "block";
            }
        }

        function showTab(tabName) {
            // Hide all tabs
            document.querySelectorAll(".tab-content").forEach((tab) => {
                tab.style.display = "none";
            });

            // Remove active class from all buttons
            document.querySelectorAll(".tab-button").forEach((btn) => {
                btn.classList.remove("active");
            });

            // Show selected tab
            const selectedTab = document.getElementById(`tab-${tabName}`);
            if (selectedTab) {
                selectedTab.style.display = "block";
            }

            // Add active class to clicked button
            event.target.classList.add("active");
        }

        function formatPrice(price) {
            if (price >= 10000000) return (price / 10000000).toFixed(1) + "M";
            if (price >= 100000) return (price / 100000).toFixed(1) + "L";
            return price.toLocaleString("en-US");
        }

        // Make functions global
        window.showTab = showTab;

        // Load property on page load
        document.addEventListener("DOMContentLoaded", loadProperty);
    </script>
</Layout>
