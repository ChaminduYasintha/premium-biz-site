---
import Layout from "../../layouts/Layout.astro";

// Static page - property data is loaded client-side via JavaScript
export async function getStaticPaths() {
  // Return a placeholder path for static build
  // All property IDs are handled client-side via JavaScript based on the URL
  return [
    { params: { id: 'index' } }
  ];
}

// Get property ID from URL
const { id } = Astro.params;

const WHATSAPP_NUMBER =
  import.meta.env.PUBLIC_WHATSAPP_NUMBER || "+94771234567";
---

<Layout title="Property Details">
  <!-- Floating WhatsApp Button -->
  <a
    href={`https://wa.me/${WHATSAPP_NUMBER.replace(/[^0-9]/g, "")}?text=${encodeURIComponent("I'm interested in this property")}`}
    target="_blank"
    rel="noopener noreferrer"
    class="whatsapp-float"
    aria-label="Contact us on WhatsApp"
  >
    <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path
        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
      ></path>
    </svg>
  </a>

  <!-- Loading State -->
  <div
    id="loading"
    class="min-h-screen flex items-center justify-center bg-slate-50"
  >
    <div class="text-center">
      <div
        class="inline-block w-16 h-16 border-4 border-amber-200 border-t-amber-600 rounded-full animate-spin mb-4"
      >
      </div>
      <p class="text-slate-600">Loading property details...</p>
    </div>
  </div>

  <!-- Property Detail Container -->
  <div id="property-detail" style="display: none;">
    <!-- Content will be loaded here -->
  </div>

  <!-- Not Found State -->
  <div
    id="not-found"
    style="display: none;"
    class="min-h-screen flex items-center justify-center bg-slate-50"
  >
    <div class="text-center p-8">
      <svg
        class="w-24 h-24 mx-auto text-slate-300 mb-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
        ></path>
      </svg>
      <h1 class="text-3xl font-bold text-slate-900 mb-4">Property Not Found</h1>
      <p class="text-slate-600 mb-8">
        The property you're looking for doesn't exist or has been removed.
      </p>
      <a href="/properties" class="btn-primary"> Browse All Properties </a>
    </div>
  </div>

  <style>
    .whatsapp-float {
      position: fixed;
      bottom: 24px;
      right: 24px;
      width: 64px;
      height: 64px;
      background: #25d366;
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 24px rgba(37, 211, 102, 0.5);
      z-index: 9999;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .whatsapp-float:hover {
      transform: scale(1.15);
      box-shadow: 0 12px 32px rgba(37, 211, 102, 0.7);
    }

    .whatsapp-float svg {
      color: white;
      fill: white;
    }

    .btn-primary {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
      color: white;
      padding: 1rem 2rem;
      border-radius: 9999px;
      font-weight: 600;
      box-shadow: 0 10px 25px -5px rgba(245, 158, 11, 0.3);
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 15px 35px -5px rgba(245, 158, 11, 0.4);
    }

    .feature-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: white;
      border: 2px solid #e2e8f0;
      padding: 0.75rem 1.25rem;
      border-radius: 9999px;
      font-weight: 600;
      color: #475569;
    }

    .feature-badge svg {
      width: 1.25rem;
      height: 1.25rem;
      color: #f59e0b;
    }


    @media (max-width: 768px) {
      .whatsapp-float {
        bottom: 20px;
        right: 20px;
        width: 56px;
        height: 56px;
      }
    }
  </style>

  <script define:vars={{ propertyId: id || "", whatsappNumber: WHATSAPP_NUMBER }}>
    async function loadProperty() {
      const loading = document.getElementById("loading");
      const detail = document.getElementById("property-detail");
      const notFound = document.getElementById("not-found");

      // Get property ID from URL if not passed via define:vars
      let actualPropertyId = propertyId || "";
      if (!actualPropertyId) {
        const pathParts = window.location.pathname.split("/");
        const idFromPath = pathParts[pathParts.length - 1];
        if (idFromPath && idFromPath !== "property") {
          actualPropertyId = idFromPath;
        }
      }

      if (!actualPropertyId) {
        loading.style.display = "none";
        notFound.style.display = "block";
        return;
      }

      try {
        if (!window.ENV?.SUPABASE_URL || !window.ENV?.SUPABASE_ANON_KEY) {
          throw new Error("Supabase not configured");
        }

        const { createClient } = window.supabase;
        const supabase = createClient(
          window.ENV.SUPABASE_URL,
          window.ENV.SUPABASE_ANON_KEY,
        );

        const { data: property, error } = await supabase
          .from("properties")
          .select("*")
          .eq("id", actualPropertyId)
          .single();

        if (error) throw error;

        if (!property) {
          loading.style.display = "none";
          notFound.style.display = "block";
          return;
        }

        // Format YouTube URL for embed
        const getYouTubeEmbedUrl = (url) => {
          if (!url) return null;
          const regExp =
            /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
          const match = url.match(regExp);
          if (match && match[2].length === 11) {
            return `https://www.youtube.com/embed/${match[2]}`;
          }
          return null;
        };

        const youtubeEmbedUrl = getYouTubeEmbedUrl(property.youtube_url);

        // Render property details
        detail.innerHTML = `
          <div class="bg-white">
            <!-- Hero Image -->
            <div class="relative h-[60vh] bg-slate-200">
              <img 
                src="${property.image_url}" 
                alt="${property.title}"
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-8">
                <div class="container mx-auto">
                  <span class="inline-block bg-amber-500 text-white px-4 py-2 rounded-full text-sm font-bold mb-4">
                    ${property.city}
                  </span>
                  <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
                    ${property.title}
                  </h1>
                </div>
              </div>
            </div>

            <!-- Content -->
            <div class="container mx-auto px-4 py-12">
              <div class="grid lg:grid-cols-3 gap-12">
                <!-- Main Content -->
                <div class="lg:col-span-2 space-y-8">
                  <!-- Price -->
                  <div class="flex items-center justify-between flex-wrap gap-4">
                    <div>
                      <p class="text-sm text-slate-500 mb-1">Price</p>
                      <p class="text-4xl font-bold text-amber-600">
                        LKR ${formatPrice(property.price)}${property.listing_type === 'rent' ? '/mo' : ''}
                      </p>
                    </div>
                    <a 
                      href="https://wa.me/${whatsappNumber.replace(/[^0-9]/g, "")}?text=${encodeURIComponent(`I'm interested in ${property.title}`)}"
                      target="_blank"
                      class="btn-primary"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path>
                      </svg>
                      Inquire on WhatsApp
                    </a>
                  </div>

                  <!-- Property Details -->
                  ${(property.bedrooms || property.bathrooms || property.area_sqft || property.features) ? `
                  <div class="bg-gradient-to-br from-slate-50 to-slate-100 rounded-2xl p-6">
                    <h2 class="text-2xl font-bold text-slate-900 mb-6">Property Details</h2>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                      ${property.bedrooms ? `
                      <div class="text-center">
                        <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-3">
                          <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                          </svg>
                        </div>
                        <p class="text-2xl font-bold text-slate-900">${property.bedrooms}</p>
                        <p class="text-sm text-slate-600">Bedrooms</p>
                      </div>
                      ` : ''}
                      ${property.bathrooms ? `
                      <div class="text-center">
                        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
                          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                          </svg>
                        </div>
                        <p class="text-2xl font-bold text-slate-900">${property.bathrooms}</p>
                        <p class="text-sm text-slate-600">Bathrooms</p>
                      </div>
                      ` : ''}
                      ${property.area_sqft ? `
                      <div class="text-center">
                        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
                          </svg>
                        </div>
                        <p class="text-2xl font-bold text-slate-900">${property.area_sqft.toLocaleString()}</p>
                        <p class="text-sm text-slate-600">Sq Ft</p>
                      </div>
                      ` : ''}
                      ${property.property_type ? `
                      <div class="text-center">
                        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
                          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                          </svg>
                        </div>
                        <p class="text-lg font-bold text-slate-900 capitalize">${property.property_type}</p>
                        <p class="text-sm text-slate-600">Type</p>
                      </div>
                      ` : ''}
                    </div>
                    ${property.features ? `
                    <div class="mt-6 pt-6 border-t border-slate-200">
                      <h3 class="text-lg font-bold text-slate-900 mb-4">Features</h3>
                      <div class="flex flex-wrap gap-2">
                        ${property.features.split(',').map(feature => feature.trim()).filter(f => f).map(feature => `
                          <span class="bg-white px-4 py-2 rounded-full text-sm font-medium text-slate-700 border border-slate-200 shadow-sm">
                            ${feature}
                          </span>
                        `).join('')}
                      </div>
                    </div>
                    ` : ''}
                  </div>
                  ` : ''}

                  <!-- Description Section -->
                  <div class="space-y-6">
                    <h2 class="text-2xl font-bold text-slate-900">About This Property</h2>
                    <p class="text-slate-600 leading-relaxed whitespace-pre-wrap">
                      ${property.description || "No description available."}
                    </p>
                  </div>

                  <!-- Video Tour Section -->
                  ${
                    youtubeEmbedUrl
                      ? `
                  <div class="space-y-4">
                    <div class="flex items-center gap-3">
                      <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                        </svg>
                      </div>
                      <h2 class="text-2xl font-bold text-slate-900">Video Tour</h2>
                    </div>
                    <div class="aspect-video bg-slate-100 rounded-2xl overflow-hidden shadow-lg">
                      <iframe 
                        width="100%" 
                        height="100%" 
                        src="${youtubeEmbedUrl}" 
                        frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen
                        class="w-full h-full"
                      ></iframe>
                    </div>
                  </div>
                  `
                      : ""
                  }

                  <!-- 360° Virtual Tour Section -->
                  ${
                    property.view_360_url
                      ? `
                  <div class="space-y-4">
                    <div class="flex items-center gap-3">
                      <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                        </svg>
                      </div>
                      <h2 class="text-2xl font-bold text-slate-900">360° Virtual Tour</h2>
                    </div>
                    <div class="aspect-video bg-slate-100 rounded-2xl overflow-hidden shadow-lg">
                      <iframe 
                        width="100%" 
                        height="100%" 
                        src="${property.view_360_url}" 
                        frameborder="0" 
                        allowfullscreen
                        class="w-full h-full"
                      ></iframe>
                    </div>
                  </div>
                  `
                      : ""
                  }

                  <!-- Floor Plan Section (in tabs if exists) -->
                  ${
                    property.plan_url
                      ? `
                  <div class="space-y-4">
                    <div class="flex items-center gap-3">
                      <div class="w-12 h-12 bg-gradient-to-br from-amber-500 to-orange-600 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                        </svg>
                      </div>
                      <h2 class="text-2xl font-bold text-slate-900">Floor Plan</h2>
                    </div>
                    <div class="bg-slate-50 rounded-2xl p-8 shadow-lg">
                      <img 
                        src="${property.plan_url}" 
                        alt="Floor Plan" 
                        class="w-full h-auto rounded-lg"
                      />
                    </div>
                  </div>
                  `
                      : ""
                  }

                  ${
                    property.plan_url
                      ? `
                  <div id="tab-plan" class="tab-content" style="display: none;">
                    <h2 class="text-2xl font-bold text-slate-900 mb-4">Floor Plan</h2>
                    <div class="bg-slate-50 rounded-2xl p-8">
                      <img 
                        src="${property.plan_url}" 
                        alt="Floor Plan" 
                        class="w-full h-auto rounded-lg"
                      />
                    </div>
                  </div>
                  `
                      : ""
                  }
                </div>

                <!-- Sidebar -->
                <div class="space-y-6">
                  <!-- Contact Card -->
                  <div class="bg-slate-50 rounded-2xl p-6">
                    <h3 class="text-xl font-bold text-slate-900 mb-4">Interested?</h3>
                    <p class="text-slate-600 mb-6">Contact us to schedule a viewing or get more information.</p>
                    <a 
                      href="https://wa.me/${whatsappNumber.replace(/[^0-9]/g, "")}?text=${encodeURIComponent(`I'd like to know more about ${property.title}`)}"
                      target="_blank"
                      class="w-full inline-flex items-center justify-center gap-2 bg-gradient-to-r from-amber-600 to-orange-600 text-white px-6 py-3 rounded-full font-semibold hover:shadow-lg transition-all"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path>
                      </svg>
                      Message Us
                    </a>
                  </div>

                  <!-- Social Share -->
                  ${
                    property.facebook_url
                      ? `
                  <div class="bg-slate-50 rounded-2xl p-6">
                    <h3 class="text-xl font-bold text-slate-900 mb-4">Follow on Social Media</h3>
                    <a 
                      href="${property.facebook_url}" 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-3 text-slate-700 hover:text-blue-600 transition-colors"
