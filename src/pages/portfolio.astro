---
import Layout from '../layouts/Layout.astro';
import { fetchPortfolio, fetchContentByType, getOptimizedImage, type PortfolioItem } from '../utils/sheet';
import { APP_CONFIG } from '../config';

const { whatsappNumber } = APP_CONFIG.contact;
const { cloudinaryCloudName } = APP_CONFIG.images;
const WHATSAPP_NUMBER = whatsappNumber;
const CLOUDINARY_CLOUD_NAME = cloudinaryCloudName;

const CONTENT_CSV_URL = import.meta.env.PUBLIC_CONTENT_CSV_URL || "";
const PORTFOLIO_CSV_URL = import.meta.env.PUBLIC_PORTFOLIO_CSV_URL || "";

let portfolioItems: PortfolioItem[] = [];

if (CONTENT_CSV_URL) {
  portfolioItems = await fetchContentByType(CONTENT_CSV_URL, 'portfolio') as PortfolioItem[];
} else if (PORTFOLIO_CSV_URL) {
  portfolioItems = await fetchPortfolio(PORTFOLIO_CSV_URL);
}

---

<Layout title="Our Portfolio" description="See our past work and successful projects.">
  
  <!-- Header -->
  <section class="bg-stone-100 py-20 text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-stone-900 mb-6">Our Portfolio</h1>
      <p class="text-stone-600 max-w-2xl mx-auto text-lg">
        A showcase of our recent projects and successful deliveries. We take pride in quality and client satisfaction.
      </p>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {portfolioItems.map((item) => (
          <div class="group relative overflow-hidden rounded-2xl shadow-lg bg-stone-50">
            <!-- Image -->
            <div class="aspect-[4/3] overflow-hidden">
              <img 
                src={getOptimizedImage(item.imageUrl || "", CLOUDINARY_CLOUD_NAME)} 
                alt={item.title} 
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" 
              />
            </div>
            
            <!-- Overlay Content -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
              <span class="text-amber-400 text-sm font-semibold tracking-wider uppercase mb-1 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-75">
                {item.category}
              </span>
              <h3 class="text-white text-xl font-bold mb-2 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-100">
                {item.title}
              </h3>
              <p class="text-stone-300 text-sm line-clamp-2 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-150">
                {item.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-stone-900 text-center">
    <div class="container mx-auto px-4">
       <h2 class="text-3xl font-bold text-white mb-8">Have a Project in Mind?</h2>
       <a 
         href={`https://wa.me/${WHATSAPP_NUMBER.replace(/[^0-9]/g, '')}`}
         target="_blank"
         class="inline-block border-2 border-amber-500 text-amber-500 hover:bg-amber-500 hover:text-white px-8 py-3 rounded-full font-bold transition-all duration-300"
       >
         Let's Discuss
       </a>
    </div>
  </section>

</Layout>
